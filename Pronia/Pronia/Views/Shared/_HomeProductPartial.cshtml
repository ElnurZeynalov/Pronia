@model HomeVM
@foreach (var item in Model.Products)
{
    <div class="col-xl-3 col-md-4 col-sm-6">
        <div class="product-item">
            <div class="product-img">
                <a>
                    <img style="height:250px" class="primary-img" src="~/assets/images/product/@item.ProductImages.Where(x=>x.IsMain==true).FirstOrDefault().Image" alt="Product Images">
                </a>
                <div class="product-add-action">
                    <ul>
                        <li>
                            <a href="wishlist.html" data-tippy="Add to wishlist" data-tippy-inertia="true" data-tippy-animation="shift-away" data-tippy-delay="50" data-tippy-arrow="true" data-tippy-theme="sharpborder">
                                <i class="pe-7s-like"></i>
                            </a>
                        </li>
                        <li class="quuickview-btn" data-bs-toggle="modal" data-bs-target="#quickModal">
                            <a href="#" data-tippy="Quickview" data-tippy-inertia="true" data-tippy-animation="shift-away" data-tippy-delay="50" data-tippy-arrow="true" data-tippy-theme="sharpborder">
                                <i class="pe-7s-look"></i>
                            </a>
                        </li>
                        <li>
                            <a asp-action="Basket" asp-route-id="@item.Id" data-tippy="Add to cart" data-tippy-inertia="true" data-tippy-animation="shift-away" data-tippy-delay="50" data-tippy-arrow="true" data-tippy-theme="sharpborder">
                                <i class="pe-7s-cart"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="product-content">
                <a class="product-name" href="shop.html">@item.Name</a>
                <div class="price-box pb-1">
                    <span class="new-price">$@item.Price</span>
                </div>
                <div class="rating-box">
                    <ul style="color:#ffc800;font-size: 22px;">
                        @for (var i = 0; i < @item.Raiting; i++)
                        {
                            <li>&starf;</li>
                        }
                        @for (var i = 0; i < 5 - @item.Raiting; i++)
                        {
                            <li>&#10032;</li>
                        }

                    </ul>
                </div>
            </div>
        </div>
    </div>
}
